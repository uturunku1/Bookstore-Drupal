function display_subjects(){
  $subjects= array("Computer Science", "Cooking", "Gay and Lesbian", "Health", "Religion");
  $returned_subject='<ul>';
  foreach ($subjects as $subject) {
    $returned_subject .= '<li>'.$subject.'</li>';
  }
  return $returned_subject.'</ul>';
}
